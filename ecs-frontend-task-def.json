{
  "family": "student-form-app-frontend-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "containerDefinitions": [
    {
      "name": "frontend",
      "image": "<FRONTEND_IMAGE_URI>",
      "essential": true,
      "portMappings": [
        { "containerPort": 5173, "hostPort": 5173 }
      ],
      "environment": [
        { "name": "VITE_API_BASE_URL", "value": "http://<BACKEND_SERVICE_ENDPOINT>:8000" }
      ]
    }
  ]
}
